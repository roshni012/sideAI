{
  "manifest_version": 3,
  "name": "SiderAI Chat Assistant",
  "version": "1.0.0",
  "description": "Chat with multiple AI models (ChatGPT, Gemini, and more) directly from your browser",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:*; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["auth-service.js", "chat-service.js", "ai-modules.js", "toolbar.js", "image-preview.js", "login-modal.js", "content.js"],
      "css": ["ai-modules.css", "toolbar.css", "image-preview.css", "login-modal.css", "content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*",
        "https://webby-sider-frontend-c9d47226052c.herokuapp.com/*"
      ],
      "js": ["auth-sync-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Open AI Sidebar"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "svg/*.svg", "toolbar.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
